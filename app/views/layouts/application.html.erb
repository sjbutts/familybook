<!DOCTYPE html>
<html>
<head>
  <title>FamilyBook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/nav' %>
	<% flash.each do |type, message| %>  <!-- array of all of Rails flash messages -->
		<div class="alert <%= bootstrap_class_for(type) %> fade-in">  <!-- called the conversion method here from application helper -->
			<button class="close" data-dismiss="alert">X</button>
			<%= message %>
		</div>
	<% end %>
<%= yield %>

</body>
</html>
